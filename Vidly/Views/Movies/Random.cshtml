@model Vidly.ViewModel.RandomMovieViewModel
@{
	ViewData["Title"] = "Random";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

@*If more than 5 customers rented a movie, that movie should be popular*@
@{
	var className = Model.Customers.Count > 5 ? "popular" : null;
}

<h1 class="@className">@Model.Movie.Name</h1>
@if (Model.Customers.Count == 0)
{
	<text>No one has rented this movie before</text>
}
else
{
	<ul>
		@foreach (var customer in Model.Customers)
		{
			<li>
				@customer.Name
			</li>
		}
	</ul>
}
